<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VideoDetailActivity">
    <com.github.welcomeworld.simplebili.widget.IjkMediaView
        android:id="@+id/ijkVideoView"
        android:layout_width="match_parent"
        android:layout_height="560px"
        tools:context=".VideoDetailActivity">
    </com.github.welcomeworld.simplebili.widget.IjkMediaView>
    <LinearLayout
        android:layout_marginTop="560px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/video_detail_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/login_tips"/>
    </LinearLayout>
</FrameLayout>