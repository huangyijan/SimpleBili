<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/index_toolbar_appBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:elevation="0dp">
    <android.support.v7.widget.Toolbar
        android:id="@+id/index_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:theme="@style/base_toolbar"
        app:popupTheme="@style/base_popup_theme"
        app:contentInsetStart="0dp"
        app:layout_scrollFlags="scroll|enterAlways">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/index_toolbar_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_drawer_index"/>
                <ImageView
                    android:id="@+id/index_toolbar_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@id/index_toolbar_drawer"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_default_avatar"/>
                <TextView
                    android:id="@+id/index_toolbar_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/index_toolbar_avatar"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:background="@color/transparent"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
            </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>